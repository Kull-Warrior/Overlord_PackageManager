<UserControl x:Class="Overlord_PackageManager.resources.EntryEditor.BlobEntryEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <ListBox Name="HexList"
                 FontFamily="Consolas"
                 FontSize="13"
                 VirtualizingPanel.IsVirtualizing="True"
                 ScrollViewer.CanContentScroll="True">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Offset, StringFormat=X8}"
                                   Width="80"
                                   Foreground="Gray"/>

                        <TextBlock Text="{Binding Hex}"
                                   Width="380"
                                   Margin="10,0,0,0"/>

                        <TextBlock Text="{Binding Ascii}"
                                   Margin="10,0,0,0"
                                   Foreground="DarkSlateGray"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</UserControl>