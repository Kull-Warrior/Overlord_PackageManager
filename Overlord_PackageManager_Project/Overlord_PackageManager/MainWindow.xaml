<Window x:Class="Overlord_PackageManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Overlord_PackageManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="642" Width="800">
    <Grid>
        <GroupBox x:Name="groupBox" HorizontalAlignment="Center" Height="124" Header="Open Packed Resource File" Margin="0,10,0,0" VerticalAlignment="Top" Width="780">
            <StackPanel Orientation="Vertical" Height="101">
                <Label Content="File Path:" />
                <DockPanel LastChildFill="True" Margin="0,0,0,10">
                    <Button Content="Browse..."
                        Click="Browse_File_Click"
                        DockPanel.Dock="Right"
                        Padding="5,2" Margin="5,0,0,0"/>
                    <TextBox x:Name="filePath" VerticalContentAlignment="Center" />
                </DockPanel>
                <Button Content="Open Packed Resource File"
        Click="Open_Click"
        Height="30"
        FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="414" Margin="10,139,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Height="19" Margin="10,558,0,0" VerticalAlignment="Top" Width="84" Click="Save"/>

    </Grid>
</Window>
